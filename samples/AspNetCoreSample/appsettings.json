{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Enrichers.Environment" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "WriteTo:Netty": {
      "Name": "Netty",
      "Args": {
        "options": {
          "BatchSize": 100,
          "PeriodMicroseconds": 500,
          "Remote": "localhost",
          "RemotePort": 6253
        }
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Sample"
    }
  },
  "AllowedHosts": "*"
}
